<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- <style name="AppBaseTheme" parent="android:Theme.Light"> -->
    <style name="AsteroidesBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AsteroidesTheme" parent="AsteroidesBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:background">#0FE1D4C0</item>
        <!-- Button styles -->
        <item name="android:buttonStyle">@style/AsteroidesTheme.Buttons</item>
    </style>

    <style name="AsteroidesBaseThemeDialog" parent="@android:style/Theme.Dialog">
    </style>
    
    <style name="AsteroidesThemeDialog" parent="AsteroidesBaseThemeDialog">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:background">#0FE1D4C0</item>
        <!-- Button styles -->
        <item name="android:buttonStyle">@style/AsteroidesTheme.Buttons</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">italic</item>
		<item name="android:typeface">monospace</item>
    </style>
    
    <style name="AsteroidesTheme.Buttons">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:text">@style/TextoAsteroides.Botones</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="TextoAsteroides">
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	
    <style name="TextoAsteroides.Botones">
		<item name="android:textSize">22sp</item>
		<item name="android:textStyle">italic</item>
		<item name="android:layout_marginTop">7dip</item>
        <item name="android:layout_marginBottom">7dip</item>
	</style>
    

</resources>