<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
			<gradient
	            android:startColor="#75deea"
	            android:endColor="#065d8b"
	            android:angle="270" />
	        <stroke
	            android:width="3dp"
	            android:color="#5c3708" />
	        <corners
	            android:radius="5dp" />
	        <padding
	            android:left="10dp"
	            android:top="10dp"
	            android:right="10dp"
	            android:bottom="10dp" />
        </shape>
    </item>
    
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
			<gradient
	            android:startColor="#c5deea"
	            android:endColor="#066dab"
	            android:angle="270" />
	        <stroke
	            android:width="2dp"
	            android:color="#5c3708" />
	        <corners
	            android:radius="5dp" />
	        <padding
	            android:left="10dp"
	            android:top="10dp"
	            android:right="10dp"
	            android:bottom="10dp" />
        </shape>
    </item>

</selector>